PKG_DEPENDS_TARGET="toolchain linux glibc"
PKG_LONGDESC="DOSBox Pure is a fork of DOSBox, an emulator for DOS games, built for RetroArch/Libretro aiming for simplicity and ease of use."
PKG_TOOLCHAIN="make"
PKG_BUILD_FLAGS+="+lto"

